@model List<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (Model.Count > 0)
{
    <ul>
        @foreach (var customer in Model)
        {
            <li><a href="/Customers/Details/@customer.Id">@customer.Name</a></li>
        }
    </ul>
}
else
{
    <p>No customers</p>
}