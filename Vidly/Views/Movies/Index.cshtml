@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (Model.Count > 0)
{
    <ul>
        @foreach (var movie in Model)
        {
            <li><a href="/Movies/Details/@movie.Id">@movie.Name</a></li>
        }
    </ul>
}
else
{
    <p>No movies</p>
}